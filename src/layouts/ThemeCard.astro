---
import "../styles/global.css";
interface Theme {
  id: string;
  author: string;
  icon: string;
  tags: string[];
}

interface Props {
  theme: Theme;
}

const theme = Astro.props.theme;
---
<div id="card" class="rounded-xl px-4 py-2">
	<div class="flex justify-between">
		<h1 class="text-2xl"><b>{theme.id}</b></h1>
		<p>{theme.icon}</p>
	</div>
	<div class="grid grid-cols-3 grid-rows-1">
		{theme.tags.map((t) => <p class="tag">{t}</p>)}
	</div>
	<p>{theme.author}</p>
</div>

<style>
	#card {
		background: #282828;
	}
	.tag {
		display: inline;
		padding: 3px 6px;
		background: #28289a40;
		border-radius: 99999px;
	}
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
